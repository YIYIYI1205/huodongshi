.container{
  width: 100%;
  height: 100%;
  text-align: center;
}
.title{
  margin-top: 30px;
  font-size: 20px;
  /* text标签好像没办法用margin */
}
.box{
  width: 300px;
  height: 450px;
  border: 1px solid #333;
  border-radius: 10px;
  margin: 40px auto;
  box-shadow: 6px 6px 6px 6px #666;
}
.box image{
  width: 100px;
  height: 100px;
  border-radius: 50%;
  margin-top: 30px;
}
.user,.password{
  width: 200px;
  height: 50px;
  margin: 0 auto;
  margin-top:30px;
  padding-left: 30px;
  border: 1px solid #666;
  border-radius: 15px;
  text-align: left;
}
.placeholder{
  line-height: 50px;
  color: #666;
}
.forget{
  margin-top: 15px;
  margin-left: -100px;
  font-size: 15px;
  color: #666;
}
.login{
  width: 200px;
  height: 50px;
  margin: 0 auto;
  margin-top:30px;
  border-radius: 15px;
  background-color: #333;
  color: white;
  line-height: 50px;
}
